<%- include('partials/header') %>

<form action="/create" method="POST">
  <div class="container-login100">
    <div class="card-header">
      <div class="card-columns">
          <div class="col-md-6">
            <div class="form-group">
                <label for="exampleInputName">Nome</label>
                <input
                    
                    type="text"
                    class="form-control"
                    id="name"
                    placeholder="Nome"
                    name="name"
                    width="60px"
                    required
                />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label for="exampleInputLastname">Sobrenome</label>
                <input
                    type="text"
                    class="form-control"
                    id="lastname"
                    placeholder="Sobrenome"
                    name="lastname"
                    width="60px"
                    required
                />
            </div>
          </div>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Endere√ßo de email</label>
        <input
          type="email"
          class="form-control"
          id="Email"
          aria-describedby="emailHelp"
          placeholder="Seu email"
          name="email"
        />
        <small id="emailHelp" class="form-text text-muted">
          Nunca vamos compartilhar seu email, confia no pai.
        </small>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Senha</label>
        <input
          type="password"
          class="form-control"
          id="Password1"
          placeholder="Senha"
          name="password"
          minlength="8"
          required
        />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword2">Confirme sua senha</label>
        <input
          type="password"
          class="form-control"
          id="Password2"
          placeholder="Senha"
          name="confirmpassword"
          minlength="8"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
  </div>
</form>

<%- include('partials/footer') %>